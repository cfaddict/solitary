<cfoutput><h1>Role Management</h1><p align="right"><a href="#event.buildLink('security.roles.edit')#">Create New Role</a></p>#getPlugin("MessageBox").renderit()#<form name="roleForm" id="roleForm" method="post" action="#event.buildLink('security.roles.remove')#">	<input type="hidden" name="roleID" id="roleID" value="" />	<table name="roles" id="roles" class="tablelisting" width="98%">		<thead>			<tr>				<th>Id</th>				<th>Role</th>				<th>Actions</th>			</tr>		</thead>		<tbody>			<cfloop array="#rc.roles#" index="role">			<tr>				<td><a href="#event.buildLink('security.roles.edit')#/#role.getRoleID()#" title="Edit Role">#role.getRoleId()#</a></td>				<td>#role.getName()#</td>				<td class="center">					<input type="button" onclick="removeRole('#role.getRoleID()#')" value="Delete"/>				</td>			</tr>			</cfloop>		</tbody>	</table>	<p align="right"><a href="#event.buildLink('security.roles.edit')#">Create New Role</a></p></form><script type="text/javascript">function removeRole(roleID){	if( confirm("Really delete?") ){		$("##roleID").val( roleID );		$("##roleForm").submit();	}}</script></cfoutput>